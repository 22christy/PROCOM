	int banyak = 0, jumlah = 0, total = 0;
	String pakaian[] = new String [banyak], ukuran[]= new String [banyak], bhn[] = new String[banyak];
	String pilihan = null, bahan = null;
	int harga[]= new int [banyak];
	int subtotal[] = new int [banyak];
	
	System.out.println("================Toko Pakaian Bagus================");
	System.out.println("==================================================");
	System.out.print("Berapa Banyak Pakaian = ");
	banyak = Integer.parseInt(br.readLine());
	System.out.println("==================================================");
	
	for (int i=0; i < banyak; i++) {
		System.out.printf("Data Pakaian ke - %d ", i+1);
		System.out.println();
		
		System.out.print("Masukkan Pilihan Pakaian <KM / KS/ JT / JS> = ");
		pilihan = br.readLine();
		
		System.out.print("Masukkan Bahan Pakaian <C / J / S / W> = ");
		bahan = br.readLine();
		
		System.out.print("Masukkan Ukuran Pakaian <S / M / L / XL> = ");
		ukuran[i] = br.readLine();
		
		System.out.println("==================================================");
		if (pilihan == "KM" || pilihan == "km") {
			pakaian[i] = "Kemeja";
			harga[i] = 120000;
		}else if (pilihan == "KS" || pilihan == "ks") {
			pakaian[i] = "Kaos";
			harga[i] = 60000;
		}else if (pilihan == "JT" || pilihan == "jt") {
			pakaian[i] = "Jaket";
			harga[i] = 120000;
		}else if (pilihan == "JS" || pilihan == "js") {
			pakaian[i] = "Jas";
			harga[i] = 225000;
		}
		
		if (bahan == "C" || bahan == "c") {
			bhn[i] = "Cotton";
		}else if (bahan == "J" || bahan == "j") {
			bhn[i] = "Jeans";
		}else if (bahan == "S" || bahan == "s") {
			bhn[i] = "Spandek";
		}else if (bahan == "W" || bahan == "w") {
			bhn[i] = "Wol";
		}
		
		System.out.println("Pilihan Pakaian = " + pakaian[i]);
		System.out.println("Bahan Pakaian = " + bhn[i]);
		System.out.println("Ukuran Pakaian = " + ukuran[i]);
		System.out.println("Harga Satuan = " + harga[i]);
		
		System.out.println("==================================================");
		System.out.print("Masukkan Jumlah Beli = ");
		jumlah = Integer.parseInt(br.readLine());
		
		subtotal[i] = jumlah*harga[i];
		System.out.println("Subtotal = " + subtotal[i]);
		System.out.println("==================================================");
	}
	System.out.println("Jadi Pembelian Anda Adalah = ");
	System.out.println("No \t Pilihan \t Bahan \t Ukuran \t SubTotal");
	System.out.println("==================================================");
		for (int i=0; i < banyak; i++) {
			System.out.printf("%d \t %s \t %s \t %s \t %d", i+1, pakaian[i], bhn[i], ukuran[i], subtotal[i]);
			System.out.println();
	
			total = total + subtotal[i];
		}
	System.out.println();
	System.out.println("Total Bayar = Rp. " + total);
	
	}	
	
}
