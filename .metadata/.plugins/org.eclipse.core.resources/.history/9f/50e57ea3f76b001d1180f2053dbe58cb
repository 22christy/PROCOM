	int banyak = 0, jumlah =0, subtotal=0;
	String pilihan = null, ukuran = null, bhn = null;
	char bahan;
	
	System.out.println("================Toko Pakaian Bagus================");
	System.out.println("==================================================");
	System.out.print("Berapa Banyak Pakaian = ");
	banyak = Integer.parseInt(br.readLine());
	System.out.println("==================================================");
	
	for (int i=0; i < banyak; i++) {
		System.out.printf("Data Pakaian ke - %d ", i+1);
		System.out.println();
		
		System.out.print("Masukkan Pilihan Pakaian <KM / KS/ JT / JS> = ");
		pilihan = br.readLine();
		
		System.out.print("Masukkan Bahan Pakaian <C / J / S / W> = ");
		bahan = br.readLine().charAt(0);
		
		System.out.print("Masukkan Ukuran Pakaian <S / M / L / XL> = ");
		ukuran = br.readLine();
		
		System.out.println("==================================================");
		if (pilihan == "KM" || pilihan == "km") {
			String pakaian = "Kemeja";
			int harga = 120000;
		}else if (pilihan == "KS" || pilihan == "ks") {
			String pakaian = "Kaos";
			int harga = 60000;
		}else if (pilihan == "JT" || pilihan == "jt") {
			String pakaian = "Jaket";
			int harga = 120000;
		}else if (pilihan == "JS" || pilihan == "js") {
			String pakaian = "Jas";
			int harga = 225000;
		}
		
		if (bahan == 'C' || bahan == 'c') {
			bhn = "Cotton";
		}else if (bahan == 'J' || bahan == 'j') {
			bhn = "Jeans";
		}else if (bahan == 'S' || bahan == 's') {
			bhn = "Spandek";
		}else if (bahan == 'W' || bahan == 'w') {
			bhn = "Wol";
		}
		int harga=0;
		String pakaian = null;
		System.out.println("Pilihan Pakaian = " + pakaian);
		System.out.println("Bahan Pakaian = " + bhn);
		System.out.println("Ukuran Pakaian = " + ukuran);
		
		System.out.println("Harga Satuan = " + harga);
		
		System.out.println("==================================================");
		System.out.print("Masukkan Jumlah Beli = ");
		jumlah = Integer.parseInt(br.readLine());
		
		subtotal = jumlah*harga;
		System.out.println("Subtotal = " + subtotal);
		System.out.println("==================================================");
	}
	
	
	
	}	
	
}
